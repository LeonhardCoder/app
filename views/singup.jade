 form(action='/users', method="POST",  class="form-horizontal")
  h1 Registrate 
  div(class="form-group") 
   label(for="name" class="col-sm-2 control-label") Nombre
   div(class="col-sm-3")
    input(type="text", name ="name", placeholder="Nombre", id="name", class="form-control")
  div(class="form-group") 
   label(for="username" class="col-sm-2 control-label") User Name
   div(class="col-sm-3")
    input(type="text", name ="username", placeholder="username", id="username", class="form-control")
